<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:VisualLogger.ViewerApp"
             xmlns:viewer="clr-namespace:VisualLogger.Viewer;assembly=VisualLogger.Viewer"
             x:Class="VisualLogger.ViewerApp.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <BlazorWebView HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type viewer:Main}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

</ContentPage>